<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shelves"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".ShelfPack.Shelves"
    android:focusable="true"
    >
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="650dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Shelves"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="320dp"
            android:src="@drawable/ic_notifications" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Owner"
            android:textSize="30dp" />

        <Button
            android:id="@+id/books_owned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Books Owned:"
            android:textSize="15dp" />

        <Button
            android:id="@+id/books_requested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Books Requested"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Borrower"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/accepted_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="15dp"
            android:clickable="true"
            android:text="Accepted Requests:" />

        <Button
            android:id="@+id/awaiting_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="15dp"
            android:text="Awaiting Approval"
            />
        <Button
            android:id="@+id/books_borrowed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Books Borrowed:" />
    </LinearLayout>

  </FrameLayout>