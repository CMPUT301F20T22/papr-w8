<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/child_fragment_holder"
    android:background="#ffffff"
    android:contextClickable="true">

    <TextView
        android:id="@+id/actionsText"
        android:layout_width="170dp"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="26dp"
        android:fontFamily="@font/happy_monkey"
        android:text="Actions"
        android:contextClickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="45dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/editdescriptionButton"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center|center_vertical"
        android:paddingTop="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_rounded_light_grey"
        android:text="Edit Description" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="294dp"
        android:layout_height="34dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="top|center"
        android:background="@drawable/button_rounded_muted_red"
        android:textColor="@color/cardview_light_background"
        android:text="Delete Book" />

</FrameLayout>